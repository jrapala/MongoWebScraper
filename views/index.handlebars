  <div class="container-fluid article-container">

{{#if article}}
    {{#each article}}
    <div class='panel panel-default' data-_id="{{_id}}" data-saved="false">
      <div class='panel-heading'>
        <h3>
          <a class='article-link' target='_blank' href='{{link}}'>
            {{title}}
          </a>
          <a class='btn btn-success save'>Save Article</a>
        </h3>
      </div>
      <div class='panel-body'>
        {{subtitle}}
      </div>
    </div>
    {{/each}}

  </div>

